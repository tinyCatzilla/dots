{
	"compilerOptions": {
		"target": "es2019",
		"lib": [
			"ES2019",
			"ES2020.String"
		],
		"module": "commonjs",
		"moduleResolution": "node",
        "esModuleInterop": true,
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "src",
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}